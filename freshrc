init_vim() {
  if which vim &> /dev/null && ! [ -e $HOME/.vim/autoload/plug.vim ]; then
    vim || [ -e $HOME/.vim/autoload/plug.vim ]
  fi
}

init_brew() {
  brew leaves > ~/.brew_leaves
}

fresh_after_build() {
  init_vim

  if command -v brew >/dev/null 2>&1; then
    init_brew
  fi
}
