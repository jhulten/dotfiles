# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

fresh freshshell/fresh bin/fresh --bin
fresh freshshell/fresh-open bin/fresh-open --bin

# Common Shell (~/.fresh/build/shell.sh)
fresh shell/aliases/\*
fresh shell/common/\*
fresh rupa/z z.sh
#fresh nojhan/liquidprompt liquidprompt

# CONFIG FILES
fresh-options --file
  fresh config/\*
  fresh jasoncodes/dotfiles config/gemrc
  fresh jasoncodes/dotfiles config/inputrc
fresh-options

# BASHRC
fresh-options --file=~/.bashrc --marker
  fresh freshshell/fresh contrib/source-build.sh
  fresh freshshell/fresh contrib/completion/fresh-completion.bash
fresh-options

# ZSHRC
fresh-options --file=~/.zshrc --marker
  fresh freshshell/fresh contrib/source-build.sh
  fresh shell/zsh/\*
  fresh freshshell/fresh contrib/completion/fresh-completion.zsh
  fresh twe4ked/dotfiles shell/zsh/zsh-syntax-highlighting.zsh
fresh-options

fresh robbyrussell/oh-my-zsh . --file=~/.oh-my-zsh/

fresh zsh-users/zsh-syntax-highlighting zsh-syntax-highlighting.zsh --file=vendor/zsh-syntax-highlighting.zsh
fresh zsh-users/zsh-syntax-highlighting highlighters/main/main-highlighter.zsh --file=vendor/highlighters/main/main-highlighter.zsh
fresh zsh-users/zsh-syntax-highlighting highlighters/brackets/brackets-highlighter.zsh --file=vendor/highlighters/brackets/brackets-highlighter.zsh

# BINARIES
fresh-options --bin
  fresh bin/\*
  fresh twe4ked/catacomb bin/catacomb
  fresh defunkt/repl bin/repl
  fresh holman/spark spark
fresh-options

# VIM
fresh-options --file=~/.vimrc --marker=\"
  fresh vim/config/leader.vim
  fresh twe4ked/dotfiles vim/vundle_before.vim
  fresh vim/bundles.vim
  fresh twe4ked/dotfiles vim/vundle_after.vim
  fresh vim/config/color.vim
  fresh vim/config/indent.vim
  fresh vim/config/statusline.vim
  fresh vim/config/suffixes.vim
  fresh vim/config/syntastic.vim
  fresh vim/config/fuzzy.vim
  fresh vim/config/taglist.vim
  fresh vim/config/vimclojure.vim
  fresh vim/config/linestyle.vim
  fresh vim/config/togglewrap.vim
  fresh vim/config/buffers.vim
  fresh vim/config/tabs.vim
  fresh vim/config/keymaps.vim
  fresh vim/config/ctrlp.vim
fresh-options

# EMACS
# fresh-options --file=~/.emacs.d/init.el --marker=';;'
#   fresh emacs/\*.el
# fresh-options
# 
# fresh-options --file=~/.emacs.d/config.org --marker='# '
#   fresh emacs/\*.org
# fresh-options

init_vim() {
  if which vim &> /dev/null && ! [ -d $HOME/.vim/bundle/vundle ]; then
    vim || [ -d $HOME/.vim/bundle/vundle ]
  fi
}

init_brew() {
  brew leaves > ~/.brew_leaves
}

fresh_after_build() {
  init_vim
  if command -v brew >/dev/null 2>&1; then
    init_brew
  fi
}
