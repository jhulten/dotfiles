# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

fresh freshshell/fresh bin/fresh --bin

# Common Shell (~/.fresh/build/shell.sh)
fresh shell/common/\*

# CONFIG FILES

fresh-options --file
  fresh config/\*
  fresh jasoncodes/dotfiles config/gemrc
  fresh jasoncodes/dotfiles shell/config/rbenv.sh
fresh-options

# BASH

fresh-options --file=~/.bashrc --marker
  fresh shell/bash/bashrc
  fresh freshshell/fresh contrib/completion/fresh-completion.bash
fresh-options

# ZSH
fresh-options --file=~/.zshrc --marker
  fresh shell/zsh/zshrc
  fresh shell/zsh/oh-my-zsh.zsh
  fresh shell/zsh/aliases.zsh
  fresh freshshell/fresh contrib/completion/fresh-completion.zsh
fresh-options

fresh robbyrussell/oh-my-zsh . --file=~/.oh-my-zsh/

# BINARIES
fresh-options --bin
  fresh bin/\*
  fresh twe4ked/catacomb bin/catacomb
  fresh rerun/rerun rerun
fresh-options

# RERUN MODULES
fresh rerun/rerun modules/stubbs --file=~/.rerun/modules/stubbs
